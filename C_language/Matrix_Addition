#include<stdio.h>
int main()
{
  int a[10][10],b[10][10],i,j,sum[10][10];
 int n,m;
 printf("Enter the rows and columns of the matrix: ");
 scanf("%d %d",&n,&m);
 printf("Enter first matrix: ");
 for(i=0;i<n;i++)
   
     for(j=0;j<m;j++)
     
       scanf("%d",&a[i][j]);
  
   printf("Enter second matrix: ");
   for(i=0;i<n;i++)
   
     for(j=0;j<m;j++)
     
       scanf("%d",&b[i][j]);
     
  
   printf("Sum of 2 matrixes is: ");
   for(i=0;i<n;i++)
   {
     for(j=0;j<m;j++)
     {
       sum[i][j]=a[i][j]+b[i][j];
      printf("%d ",sum[i][j]);
     }
       printf("\n");
   } 
   
return 0;
}
